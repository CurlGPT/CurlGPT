{
    "compilerOptions": {
        "target": "ES2020",
        "module": "esnext",
        "moduleResolution": "node",
        "rootDir": "src",
        "outDir": "dist",
        "lib": ["ES2022"],
        "strict": true,
        "esModuleInterop": true,
        "allowJs": true,
        "checkJs": false,
        "resolveJsonModule": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "declaration": true,
        "noImplicitAny": true,
        "typeRoots": ["node_modules/@types"]
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules"],
    "tscOptions": {
        "emit": "esnext"
    }
}
